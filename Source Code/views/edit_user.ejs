<%- include("partial_headers.ejs"); %>

<div class="ensemble">
    <style>
        .table_edit input{
            width: max-content;
        }
    </style>

        <form action='/main_page/updateClient/<%= EditOneClient.ID_client %>' method="post" 
            enctype="application/x-www-form-urlencoded">

            <table class="table_edit">
                <tr>
                    <tr><td>Name : </td>
                        <td>
                            <input type="text" name="Client_Name" value="<%= EditOneClient.client_name %>">
